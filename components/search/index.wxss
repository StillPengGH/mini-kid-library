.search-container {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.search-header {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 999;
}

.search-input-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 24rpx;
}

.search-input {
  height: 68rpx;
  line-height: 68rpx;
  width: 560rpx;
  background-color: #f5f5f5;
  border-radius: 50px;
  padding-left: 56rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.pl-color {
  color: #999;
}

.search-clear {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 24rpx;
  z-index: 99;
}

.search-cancel {
  margin-right: 40rpx;
  color: #666;
}

.content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.histroy {
  margin-top: 150rpx;
}

.hot {
  margin-top: 50rpx;
}

.line-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title {
  display: inline-block;
  color: #333;
  margin-bottom: 2rpx;
  font-size: 30rpx;
}

.line {
  height: 30rpx;
  width: 10rpx;
  background-color: #000;
  display: inline-block;
  margin-right: 10rpx;
}

.books-container {
  width: 570rpx;
  margin-top: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}

.books-container c-book {
  margin-bottom: 25rpx;
}

.his-words {
  margin-top: 20rpx;
}

.his-word {
  margin-right: 20rpx;
}

.mt20{
  margin-top: 20rpx;
}

.loading-bottom {
    margin: 50rpx auto;
}

.loading-top {
   position:absolute;
   top:150rpx;
   left: 50%;
}

.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}

.empty-tip {
    display: inline-block;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
}