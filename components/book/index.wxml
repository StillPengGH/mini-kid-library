<view class="book-container" bind:tap="goToBookDetail">
  <image class="book-img" src="{{book.image}}"></image>
  <view class="book-description">
    <text class="book-title">{{book.title}}</text>
    <text class="book-author">{{book.author}}</text>
    <view class="book-like" wx:if="{{isLike}}">
      <text class="like-num"  >{{book.like_nums}}</text>
      <text class="like-text" >喜欢</text>
    </view>
  </view>
</view>